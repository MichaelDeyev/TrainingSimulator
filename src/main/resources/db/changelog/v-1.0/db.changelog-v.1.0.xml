<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_type" value="uniqueidentifier" dbms="mssql"/>
    <property name="uuid_type" value="RAW(16)" dbms="oracle"/>


    <!-- Answer Table-->
    <changeSet id="create_answer_table" author="Mikhail Deyev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="answer"/>
            </not>
        </preConditions>
        <createTable tableName="answer">
            <column name="id" type="${uuid_type}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="question_id" type="${uuid_type}">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
            <column name="is_right" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Question Table-->
    <changeSet id="create_question_table" author="Mikhail Deyev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="question"/>
            </not>
        </preConditions>
        <createTable tableName="question">
            <column name="id" type="${uuid_type}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="topic" type="varchar(255)"/>
            <column name="ticket_id" type="${uuid_type}">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Ticket Table-->
    <changeSet id="create_ticket_table" author="Mikhail Deyev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ticket"/>
            </not>
        </preConditions>
        <createTable tableName="ticket">
            <column name="id" type="${uuid_type}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="number" type="integer"/>
        </createTable>
    </changeSet>
</databaseChangeLog>